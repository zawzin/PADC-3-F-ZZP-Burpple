<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="white_text_black_border">
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">@color/black_full</item>
    </style>

    <style name="text_style_in_new_and_trending">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:maxLength">13</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="login_form">
        <item name="android:foreground">@drawable/divider_border</item>
        <item name="android:textColor">@color/white_full</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:paddingLeft">@dimen/margin_medium_3</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
    <style name="sign_up_and_login_title">
        <item name="android:textColor">@color/white_full</item>
        <item name="android:textSize">@dimen/text_heading_1x</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    <style name="accent_button">
    <item name="android:background">@color/accent</item>
    <item name="android:paddingLeft">@dimen/margin_medium_2</item>
    <item name="android:paddingRight">@dimen/margin_medium_2</item>
    <item name="android:textColor">@color/white_full</item>
    <item name="android:textSize">@dimen/text_regular</item>
</style>
    <style name="til_login_and_signup">
        <item name="android:textColorHint">@color/white_full</item>
    </style>
</resources>
