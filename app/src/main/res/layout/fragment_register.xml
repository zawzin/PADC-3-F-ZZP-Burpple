<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/margin_xlarge"
    android:background="@drawable/dummy_login_bg">

    <TextView
        android:id="@+id/lbl_signup_form"
        style="@style/sign_up_and_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:text="@string/sign_up_form" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_sign_up_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/til_login_and_signup"
        android:layout_marginTop="@dimen/margin_medium_3">
        <EditText
            android:id="@+id/et_sign_up_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:maxLines="1"
            android:maxLength="20"
            android:textColor="@color/white_full"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_sign_up_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/til_login_and_signup"
        android:layout_marginTop="@dimen/margin_medium">
        <EditText
            android:id="@+id/et_sign_up_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:maxLines="1"
            android:textColor="@color/white_full"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_sign_up_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        style="@style/til_login_and_signup">
        <EditText
            android:id="@+id/et_sign_up_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mail@Example.com"
            android:maxLines="1"
            android:textColor="@color/white_full"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_sign_up_phoneNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/til_login_and_signup"
        android:layout_marginTop="@dimen/margin_medium">
        <EditText
            android:id="@+id/et_sign_up_phNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please enter a phone number"
            android:maxLines="1"
            android:textColor="@color/white_full"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_sign_up_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        style="@style/til_login_and_signup">
        <EditText
            android:id="@+id/et_sign_up_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:drawableRight="@drawable/ic_visibility_black_24dp"
            android:drawableTint="@color/secondary_text"
            android:maxLines="1"
            android:textColor="@color/white_full"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_sign_up_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        style="@style/til_login_and_signup">
        <EditText
            android:id="@+id/et_sign_up_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:drawableRight="@drawable/ic_visibility_black_24dp"
            android:drawableTint="@color/secondary_text"
            android:maxLines="1"
            android:textColor="@color/white_full"/>
    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:id="@+id/cb_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:buttonTint="@color/white_full"
        android:text="@string/cb_sign_up_form"
        android:textColor="@color/white_full"
        android:textSize="@dimen/text_regular_2x" />

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cb_sign_up"
        android:layout_marginBottom="@dimen/margin_xlarge"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@color/primary"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/white_full"
        android:textSize="@dimen/text_regular_3x"
        android:foreground="@drawable/ripple_white"/>
</LinearLayout>
